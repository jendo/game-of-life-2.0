{
  "name": "jendo/game-of-life-2.0",
  "description": "Game of Life",
  "authors": [
    {
      "name": "jendo",
      "email": "jenis.michal@gmail.com"
    }
  ],
  "type": "project",
  "license": "MIT",
  "require": {
    "php": ">=8.0",
    "nette/di": "^3.0",
    "symfony/console": "^6.0",
    "sabre/xml": "^4.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "phpstan/phpstan-nette": "^1.1",
    "phpstan/phpstan": "^1.8",
    "phpunit/phpunit": "^9.5",
    "phpspec/prophecy-phpunit": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app"
    },
    "autoload-dev": {
      "psr-4": {
        "AppTest\\": "tests"
      }
    }
  },
  "scripts": {
    "cs": "./vendor/bin/phpcs -d memory_limit=512M --parallel=8 --colors --standard=PSR12 --extensions=php --encoding=utf-8 -sp ./app",
    "stan": "php -d memory_limit=512M ./vendor/bin/phpstan analyze -l max -c phpstan.neon -vvv app/",
    "tests": "vendor/bin/phpunit -d memory_limit=512M --configuration /project/phpunit.xml.dist"
  },
  "minimum-stability": "stable"
}
